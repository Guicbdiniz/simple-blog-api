generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id     Int    @id @default(autoincrement())
  body   String
  title  String
  authorId Int
  author   Author   @relation(fields: [authorId], references: [id])
}
